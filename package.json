{
  "name": "jahezmart-backend",
  "version": "1.0.0",
  "description": "Backend for Jahezmart using Node.js, Prisma, and MongoDB",
  "main": "src/app.ts",
  "scripts": {
    "dev": "ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "seed": "ts-node prisma/seed.ts",
    "prisma:setup": "npm run prisma:generate && npm run prisma:push && npm run seed"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^4.1.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.18.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.24",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "typescript": "5.9"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
